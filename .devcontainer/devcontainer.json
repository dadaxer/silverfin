{
    "image": "mcr.microsoft.com/devcontainers/base:debian",
    "features": {
        "ghcr.io/devcontainers/features/rust:1": {
            "profile": "default"
        },
        "ghcr.io/devcontainers/features/docker-in-docker:2": {},
        "ghcr.io/devcontainers/features/github-cli:1": {},
        "ghcr.io/rchaganti/vsc-devcontainer-features/cosign:latest": {}
    },
    "onCreateCommand": "cargo install --locked blue-build && apt install cosign",

    "mounts": [
        "source=${localEnv:HOME}/Dev/iso,target=/home/vscode/iso,type=bind,consistency=cached"
    ]
}
